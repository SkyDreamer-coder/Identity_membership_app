
@{
    ViewData["Title"] = "Index";
}
@model UserVM

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Hoşheldin @User.Identity!.Name</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                    <th>Telefon</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.PhoneNumber</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
