
@{
    ViewData["Title"] = "SignIn";
}
@model SignInVM
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
    <div class="col-md-7 offset-md-3">
        <h2>Kullanıcı Giriş</h2>
        <hr />

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        </div>

        <form asp-controller="Home" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnURl"]" method="post">
            <div class="row mb-3">
                <label for="Email" class="col-md-2 col-form-label" asp-for="Email"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="row mb-4">
                <label for="Password" class="col-md-2 col-form-label" asp-for="Password"></label>
                <div class="col-md-8">
                    <input asp-for="Password" class="form-control"  type="text">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4 form-check">
                        <input class="form-check-input" asp-for="RememberMe" type="checkbox">
                        <label class="form-check-label" asp-for="RememberMe" for="RememberMe"></label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-8">
                        <a class="btn btn-outline-secondary btn-sm float-end" asp-controller="Home" asp-action="ForgotPassword">Şifremi unuttum</a>
                    </div>                    
                </div>
            </div>            
            <button type="submit" class="btn btn-primary col-md-3 offset-4">Giriş Yap</button>
        </form>
    </div>
</div>
